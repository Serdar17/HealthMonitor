{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss:fff} {Level:u3} ({CorrelationId})] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args":
        {
          "restrictedToMinimumLevel": "Information",
          "path":  "logs/log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  
  "TelegramBotSettings": {
    "Token": "",
    "ChatId": ""
  },

  "MonitoringSettings": {
    "MachineName": "Test",
    "RamMemoryThresholdInPercent": 10,
    "RomMemoryThresholdInPercent": 5
  },
  
  "AllowedHosts": "*"
}
